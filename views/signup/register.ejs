<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link type="text/css" rel="stylesheet" href="./../../static/css/styles.css"/>
    <title>Document</title>
  </head>
  <body class="font-body">
    <%- include('../messages/errors.ejs') %>
    <%- include('../nav/nav.ejs') %>
    <div class="grid grid-cols-12 grid-rows-4">
      <div class="card col-start-2 col-end-6 row-start-1 row-end-5 row-span-4 mt-9">
        <form action="/register" method="POST">
          <div class="grid grid-rows-5 items-center justify-items-center p-7 gap-y-5 text-lg">
            <div class="grid items-center justify-items-center row-span-1 w-full px-3">
              <label for="name">Fullname:</label>
              <input class="bg-gray-500 rounded p-2 placeholder-gray-700 focus:outline-none focus:shadow-myOutline" type="text" name="name" id="name" placeholder="John Doe"/>
            </div>
            <div class="grid items-center justify-items-center row-span-1 w-full px-3">
              <label for="email">Email Address:</label>
              <input class="bg-gray-500 rounded p-2 placeholder-gray-700 focus:outline-none focus:shadow-myOutline" type="email" name="email" id="email" placeholder="John@gmail.com"/>
            </div>
            <div class="grid items-center justify-items-center row-span-1 w-full px-3">
              <label for="password">Password:</label>
              <input class="bg-gray-500 rounded p-2 placeholder-gray-700 focus:outline-none focus:shadow-myOutline" type="password" name="password" id="password" placeholder="********"/>
            </div>
            <div class="grid items-center justify-items-center row-span-1 w-full px-3">
              <label for="cpassword">Confirm Password:</label>
              <input class="bg-gray-500 rounded p-2 placeholder-gray-700 focus:outline-none focus:shadow-myOutline" type="password" name="cpassword" id="cpassword" placeholder="********"/>
            </div>
            <div>
              <div class="grid items-center justify-items-center">
                <input class="logsign bg-gray-500 p-2 rounded text-xl text-white cursor-pointer" type="submit" value="Sign Up" class="logsign bg-gray-500 p-2 rounded text-xl text-white cursor-pointer">
              </div>
              <div>
                <span>Already have an account? <a class="text-black font-bold underline" href="/login">Login</a></span>
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="col-start-8 col-end-12 row-start-1 row-end-5 mt-14">
        <img src="./../../static/imgs/signup.svg" alt="signup">
      </div>
    </div>
  </body>
</html>
