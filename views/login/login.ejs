<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link type="text/css" rel="stylesheet" href="./../../static/css/styles.css"/>
    <title>Reference</title>
  </head>
  <body>
    <%- include('../messages/errors.ejs') %>
    <%- include('../nav/nav.ejs') %>
   <div class="grid grid-cols-12 grid-rows-5">
      <div class="card col-start-2 col-end-6 row-start-2 row-end-5 row-span-4">
        <form action="/login" method="POST">
            <div class="grid grid-rows-3 items-center justify-items-center p-7 gap-y-5 text-lg">
              <div class="grid items-center justify-items-center row-span-1 w-full px-3">
                <label  class="" for="email">Email Address:</label>
                <input class="bg-gray-500 rounded p-2 placeholder-black focus:outline-none focus:shadow-myOutline" type="text" name="email" id="email" placeholder="John Doe"/>
              </div>
              <div class="grid items-center justify-items-center row-span-1 px-3">
                <label for="password">Password:</label>
                <input class="bg-gray-500 rounded p-2 placeholder-black focus:outline-none focus:shadow-myOutline" type="password" name="password" id="password" placeholder="*********"/>
              </div>
              <div class="items-center">
                <input type="submit" value="Login" class="logsign col-start-2 bg-gray-500 p-2 rounded text-xl text-white cursor-pointer">
              </div>
            </div>
        </form>
      </div>
      
      <div class="col-start-8 col-end-12 row-start-2 row-end-5">
        <img src="./../../static/imgs/login.svg" alt="login">
      </div>
   </div>
   <script src="./../../static/js/login.js"></script>
  </body>
</html>
