<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" type="image/png" href="../../../static/imgs/ref.png">
    <link
      type="text/css"
      rel="stylesheet"
      href="./../../static/css/styles.css"
    />
    <title>Reference</title>
    <script src="./../../clientJS/login.js"></script>
  </head>
  <body class="font-body" onload="resetData()">
    <%- include('../messages/errors.ejs') %> <%- include('../nav/nav.ejs') %>
    <div class="grid grid-cols-12 grid-rows-3 items-center">
      <div class="card col-start-2 col-end-6 row-start-1 row-end-4 row-span-4">
        <form action="/login" method="POST">
          <div
            class="grid grid-rows-3 items-center justify-items-center p-7 gap-y-5 text-lg"
          >
            <div
              class="grid items-center justify-items-center row-span-1 w-full px-3"
            >
              <label class="" for="email">Email Address:</label>
              <input
                class="bg-gray-400 text-black rounded p-2 placeholder-gray-700 focus:outline-none focus:shadow-myOutline"
                type="text"
                name="email"
                id="email"
                placeholder="JohnDoe@gmail.com"
              />
            </div>
            <div class="grid items-center justify-items-center row-span-1 px-3">
              <label for="password">Password:</label>
              <input
                class="bg-gray-400 text-black rounded p-2 placeholder-gray-700 focus:outline-none focus:shadow-myOutline"
                type="password"
                name="password"
                id="password"
                placeholder="*********"
              />
            </div>
            <div class="grid items-center justify-items-center">
              <div>
                <input
                  type="submit"
                  value="Login"
                  class="logsign bg-gray-500 p-2 rounded text-xl text-white cursor-pointer"
                />
              </div>
              <div>
                <span
                  >Don't have an account?
                  <a class="text-black font-bold underline" href="/register"
                    >Sign-up</a
                  ></span
                >
              </div>
            </div>
          </div>
        </form>
      </div>

      <div class="col-start-8 col-end-12 row-start-2 row-end-4 mb-4">
        <img src="./../../static/imgs/login.svg" alt="login" />
      </div>
    </div>
    <%- include('../footer/footer.ejs') %>
  </body>
</html>
